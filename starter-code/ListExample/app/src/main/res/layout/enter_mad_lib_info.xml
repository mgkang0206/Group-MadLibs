<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
        <ListView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editAdjective1"
                android:hint="Adjective"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/grey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editAdjective2"
                android:hint="Adjective"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/grey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editNoun1"
                android:hint="Noun"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/grey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editNoun2"
                android:hint="Noun"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/grey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editAnimal"
                android:hint="Animal"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/grey"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editGame"
                android:hint="Game"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/grey"/>

        </ListView>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make the magic happen"
        android:id="@+id/setIntentResult"
        android:layout_gravity="bottom"
        android:background="@color/colorAccent"/>

</FrameLayout>
